<!DOCTYPE html>
<html>
  <head>
    <title>MbtiSharingTest</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="min-h-screen flex flex-col">
    <div class="flex-1 bg-neutral-200 w-full">
      <% if user_signed_in? %>
        <%= render 'shared/after_login_header' %>
      <% else %>
        <%= render 'shared/before_login_header' %>
      <% end %>
      <div class="max-w-5xl mx-auto">
        <% if notice %>
          <p class="notice m-10 p-5 rounded text-2xl bg-green-400"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert m-10 p-5 rounded text-2xl bg-red-400"><%= alert %></p>
        <% end %>
        <%= yield %>
      </div>
    </div>
    <%= render 'shared/footer' %>
  </body>
</html>
