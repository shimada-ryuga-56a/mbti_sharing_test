<div class="m-10">
  <h2 class="mb-4 text-4xl leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-black">ユーザー編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :ユーザー名 %><br />
      <%= f.text_field :username, autofocus: true, class: "w-full h-10 mb-5", autocomplete: "username" %>
    </div>

    <div class="field">
      <%= f.label :コメント %><br />
      <%= f.text_field :comment, autofocus: true, class: "w-full h-10 mb-5", autocomplete: "comment" %>
    </div>

    <div class="field">
      <%= f.label :MBTI %><br />
      <%= f.select :mbti, User::MBTI_OPTIONS, { prompt: 'MBTIを選択してください' }, { include_blank: true } %>
    </div>

    <div class="mb-3 mt-5">
      <%= f.label :プロフィール写真 %>
      <%= f.file_field :image, class: "form-control", class: "w-full h-10", accept: 'image/*' %>
    </div>

    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :current_password, class: "w-full h-10 mb-5", autocomplete: "current-password" %>
    </div>

    <div class="flex">
      <div class="actions my-5 bg-cyan-600 text-white rounded w-20 h-10 mr-5 md:text-base flex items-center justify-center">
        <%= f.submit "完了" %>
      </div>
      <div class="actions my-5 bg-gray-400 text-white rounded w-20 h-10 md:text-base flex items-center justify-center">
        <%= link_to "戻る", :back %>
      </div>
    </div>
  <% end %>

  <!-- <h3>Cancel my account</h3>-->
  <!-- <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>-->
</div>